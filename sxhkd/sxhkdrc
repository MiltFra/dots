#
# wm independent hotkeys
#

# terminal emulator
super + Return
	termite

# program launcher
#super + m
#	rofi -show drun -m -1 -show-icons

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

super + shift  + {y, u, i, o}
	{reboot, shutdown now, bspc quit, /home/miltfra/bin/lock}

super + {_, shift+} space
	setxkbmap -layout {us, de}

#
# bspwm hotkeys
#

# quit/restart bspwm
alt + shift + r
	bspc wm -r

# close and kill
super + {_,shift + }Escape
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + z
	bspc desktop -l next


# swap the current node and the biggest node
super + s
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {_, shift+, ctrl+}d
	bspc node -t {pseudo_tiled, floating, tiled}


#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + , ctrl+}{h,j,k,l}
	bspc node -{f,n,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

super +{_, shift+} grave
	bspc node @parent -R {90,180}


# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1,2,3,4,q,w,e,r}
	bspc {desktop -f,node -d} '^{1-8}'

super + {_, shfit +}{5,6}
	bspc {desktop -f, node -d} '^{9, 10}'
#
# move/resize
#

# expand a window by moving one of its side outward
alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#
# splitting
#

super + s
    if [ -z "$(bspc query -W -w last.manual.local)" ]; then \
        bspc node -s biggest.unfocused; \
    else \
        bspc node -w last.manual.local; \
	fi

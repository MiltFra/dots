[colors]
background = #cc01010a
background-focused = #cc0101a
background-visible = #cc0101a
foreground = #ffffff
foreground-alt = #888
foreground-visible = #aaa
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/xps]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 35
radius = 0.0
fixed-center = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Hack:weight=bold:pixelsize=12;2
font-1 = Font Awesome 5 Free:pixelsize=11;2
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=11;2
font-3 = Font Awesome 5 Brands:pixelsize=11;2
font-4 = Noto Sans:pixelsize=11;1

modules-left = time date xkeyboard updates spotify
modules-center = bspwm
modules-right = pulseaudio battery backlight root cpu memory eth

tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize


[bar/desktop]
monitor = ${env:MONITOR:HDMI-A-1}
width = 100%
height = 27
radius = 0.0
fixed-center = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Hack:weight=bold:pixelsize=11;1
font-1 = Font Awesome 5 Free:pixelsize=11;2
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=11;2
font-3 = Font Awesome 5 Brands:pixelsize=11;2
font-4 = Noto Sans:pixelsize=11;1

modules-left = time date xkeyboard updates spotify
modules-center = bspwm
modules-right = usb root storage cpu memory eth

tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize

[module/updates]
type = custom/script
exec = /home/miltfra/.config/polybar/polybar-scripts/updates-arch-combined/updates-arch-combined.sh
interval = 600
format-prefix-foreground = ${colors.foreground-alt}
format-prefix = " "

[module/usb]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/system-usb-udev/system-usb-udev.sh
tail = true
click-left = ~/.config/polybar/polybar-scripts/system-usb-udev/system-usb-udev.sh --mount
click-right = ~/.config/polybar/polybar-scripts/system-usb-udev/system-usb-udev.sh --unmount
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
interval = 1

[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python ~/.config/polybar/polybar-scripts/polybar-spotify/spotify_status.py -f '{artist}: {song}'
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1


[module/backlight]
type = internal/xbacklight
output = eDP1
enable-scroll = true
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery

full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
format-charging-prefix = " "
format-discharging-prefix = " "
format-fullcharging-prefix = " "
format-charging-prefix-foreground = ${colors.foreground-alt}
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-full-prefix-foreground = ${colors.foreground-alt}

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 5
format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.foreground-alt}
label-volume = %percentage%
label-muted =  --

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/storage]
type = internal/fs
interval = 25
mount-0 = /home/miltfra/storage/hdd1

format-mounted-prefix=" "
format-mounted-prefix-foreground=${colors.foreground-alt}
label-mounted = %percentage_used%%
label-unmounted = --
label-unmounted-foreground = ${colors.foreground-alt}

[module/root]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix=" "
format-mounted-prefix-foreground=${module/storage.format-mounted-prefix-foreground}
label-mounted = %percentage_used%%
label-unmounted =  --
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

pin-workspaces = false
label-focused = %name%
label-focused-background = ${colors.background-focused}
label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers=true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-focused}
label-focused-padding = 3
label-focused-foreground = #ffffff
label-focused-underline = ${colors.foreground-alt}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2
label-unfocused-foreground = #777777

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background-visible}
label-visible-padding = ${self.label-focused-padding}
label-visible-foreground = ${colors.foreground}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-padding = ${self.label-unfocused-padding}

; Separator in between workspaces
;label-separator = •
;label-separator-foreground = ${self.label-unfocused-foreground}


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used:2%%

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 30

date = "%Y/%m/%d"


format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label = %date% 

[module/time]
type = internal/date
interval = 5

date = 

time = %H:%M

format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

